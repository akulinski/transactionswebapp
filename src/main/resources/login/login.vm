<html>
    <head>
        <link rel='stylesheet' href='/bootstrap/bootstrap.css'>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    </head>
    <body>
        #include("template/navLogin.vm")
        <section class="col-sm">
            <form action="/login" method="post">

                <div class="form-group">
                    <label for="login">Nazwa użytkownika</label>
                    <input type="text" class="form-control" id="username" name="username" aria-describedby="loginHelp" placeholder="Użytkownik">
                    <small id="loginHelp" class="form-text text-muted">Nazwa użytkownika wpisana podczas zakładania konta</small>
                </div>

                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="password">
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-dark">Zaloguj się</button>
                </div>
            </form>
        </section>
    </body>
</html>